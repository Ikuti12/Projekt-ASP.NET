@model LoginViewModel

<h2 class="special">Welcome to our register form!</h2>
<form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal" role="form">
    <h4 class="special">Create a new account and start writing reviews today!</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="UserName" class="col-md-2 control-label special"></label>
        <div class="col-md-10">
            <input asp-for="UserName" class="form-control" id="UserName" />
            <span asp-validation-for="UserName" class="text-danger" id="UserNameError"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="col-md-2 control-label special"></label>
        <div class="col-md-10">
            <input asp-for="Password" class="form-control" id="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Register" id="Register" />
        </div>
    </div>
</form>