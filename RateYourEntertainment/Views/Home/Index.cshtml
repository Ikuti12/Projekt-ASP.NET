@model HomeViewModel


<h2>@Model.Title</h2>
@foreach (var game in Model.Games)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@game.ImageThumbnailURL" alt="" />
            <div class="caption">
                <h3>abc</h3>
                <h3>
                    <a asp-controller="Home" asp-action="Details"
                       asp-route-id="@game.GameId">@game.Name</a>
                </h3>
                <p>@game.ShortDescription</p>
            </div>
        </div>
    </div>
}