@model IEnumerable<Game>
<h2 class="special">Game Management</h2>
@if (!Model.Any())
{
    <tr><td colspan="3" class="text-center">No games at this point</td></tr>
}
else
{
    <table class="table table-condensed table-bordered">
        <tr>
            <th class="special">Game ID</th>
            <th class="special">Image</th>
            <th class="special">Name</th>
            <th class="special">Actions</th>
        </tr>
        @foreach (var game in Model)
        {
        <tr>
            <td class="special">@game.GameId</td>
            <td><img src="@game.ImageThumbnailURL" /></td>
            <td class="special">@game.Name</td>
            <td>
                <form asp-controller="GameManagement" asp-action="DeleteGame" asp-route-id="@game.GameId" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="EditGame" asp-route-id="@game.GameId">Edit</a>
                    <button type="submit" onclick="return confirm('Do you really want to delete this game?');" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
        }
    </table>
}
<p>
    <a class="btn btn-primary" asp-action="AddGame">Add new game</a>
</p>
