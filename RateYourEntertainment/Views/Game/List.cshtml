</div>

@section scripts{

    <script>
        $(document).ready(function () {
            LoadMore
        s();
        });
        $(window).scroll(function () {
            if ($(window).scrollTop() == $(document).height() - $(window).height()) {
                LoadMoreGames();
            }
        });
        function LoadMoreGames() {
            $.ajax({
                type: 'GET',
                url: '/api/GameData',
                dataType: 'json',
                success: function (jsonData) {
                    if (jsonData == null) {
                        alert('no data returned');
                        return;
                    }
                    $.each(jsonData, function (index, game) {
                        var GameSummarString = '<div class="col-sm-4 col-lg-4 col-md-4"> ' +
                                              '  <div class="thumbnail">' +
                                              '     <img src="' + game.imageThumbnailUrl + '" alt="">' +
                                              '      <div class="caption">' +
                                              '         <h3 class="pull-right"></h3>' +
                                              '         <h3>' +
                                              '             <a href=/Game/Details/' + game.gameId + '>' + game.name + '</a>' +
                                              '         </h3>' +
                                              '         <p>' + game.shortDescription + '</p>' +
                                              '    </div>' +
                                              '  </div>' +
                                              '</div>';
                        $('#gameDiv').append(GameSummarString);
                    });
                },
                error: function (ex) {
                    alert(ex);
                }
            });
            return false;
        }
    </script>

}